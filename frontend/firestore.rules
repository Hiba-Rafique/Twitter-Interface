rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: check membership under companies/{companyId}/members/{uid}
    function belongsToCompany(companyId) {
      return request.auth != null &&
        exists(/databases/$(database)/documents/companies/$(companyId)/members/$(request.auth.uid));
    }

    // Top-level posts collection (some clients write here)
    match /posts/{postId} {
      allow read: if request.auth != null
        && resource.data.companyId is string
        && belongsToCompany(resource.data.companyId)
        && resource.data.isDeleted == false;

      allow create: if request.auth != null
        && request.resource.data.companyId is string
        && belongsToCompany(request.resource.data.companyId)
        && request.resource.data.userId == request.auth.uid;

      // Owner can update any field; company members can update likes/comments counters/arrays
      allow update: if request.auth != null && (
        resource.data.userId == request.auth.uid || (
          resource.data.companyId is string && belongsToCompany(resource.data.companyId) && (
            // allow only likes/comments field updates from non-owners
            (request.writeFields.hasOnly(['likes','comments','likeCount','commentCount','updatedAt']))
          )
        )
      );

      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Company-scoped posts
    match /companies/{companyId} {
      // Allow reads to the company doc itself to members
      allow read: if request.auth != null && belongsToCompany(companyId);

      match /posts/{postId} {
        allow read: if request.auth != null && belongsToCompany(companyId) && resource.data.isDeleted == false;

        allow create: if request.auth != null && belongsToCompany(companyId) && request.resource.data.userId == request.auth.uid && request.resource.data.companyId == companyId;

        allow update: if request.auth != null && (
          resource.data.userId == request.auth.uid || (
            belongsToCompany(companyId) && (request.writeFields.hasOnly(['likes','comments','likeCount','commentCount','updatedAt']))
          )
        );

        allow delete: if request.auth != null && resource.data.userId == request.auth.uid;

        // Likes subcollection (if using subcollections)
        match /likes/{likeId} {
          allow read: if request.auth != null && belongsToCompany(companyId);
          allow create, delete: if request.auth != null && belongsToCompany(companyId) && request.auth.uid == likeId;
        }

        // Comments subcollection (if using subcollections)
        match /comments/{commentId} {
          allow read: if request.auth != null && belongsToCompany(companyId) && resource.data.isDeleted == false;
          allow create: if request.auth != null && belongsToCompany(companyId) && request.resource.data.userId == request.auth.uid;
          allow update: if request.auth != null && belongsToCompany(companyId) && resource.data.userId == request.auth.uid;

          match /likes/{likeId} {
            allow read: if request.auth != null && belongsToCompany(companyId);
            allow create, delete: if request.auth != null && belongsToCompany(companyId) && request.auth.uid == likeId;
          }
        }
      }
    }
  }
}
